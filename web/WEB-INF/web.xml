<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>SimpleController</servlet-name>
        <servlet-class>control.SimpleController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletWithJSP</servlet-name>
        <servlet-class>control.ServletWithJSP</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewConnectionCreate</servlet-name>
        <servlet-class>control.NewConnectionCreate</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SimpleController</servlet-name>
        <url-pattern>/simpleTime</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletWithJSP</servlet-name>
        <url-pattern>/time</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewConnectionCreate</servlet-name>
        <url-pattern>/newConnection</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewConnectionCreate</servlet-name>
        <url-pattern>/connections</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewConnectionCreate</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
